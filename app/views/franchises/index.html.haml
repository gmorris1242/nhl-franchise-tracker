%section#franchises
  .row
    .column
      %h1.heading Franchise
      =link_to 'New Franchise', new_franchise_path, class: 'btn'
      = link_to 'Records', records_path, class: 'btn black'
      -@franchises.each do |franchise|
        .card.relative.franchise-card{ class: franchise.name.tr(' ', '-').tr('.','').downcase}
          = link_to franchise_seasons_path(franchise.id), class: 'link-wrapper' do
            .wrapper
              %h2.heading.md-show=franchise.name
            = image_tag get_team_logo(franchise.name), class: 'logo'
        .md-show
          %p.text.fake-btn Seasons: #{franchise.seasons.count}
          %p.text.fake-btn Created: #{franchise.created_at.strftime("%b %d, %Y")}
        = link_to 'Delete', franchise_path(id: franchise.id), method: :delete, class: 'btn black', data: {confirm: "Are You Sure?"}
